<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register_Activity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:letterSpacing="0.02"
            android:paddingLeft="25dp"
            android:text="Sign Up"
            android:inputType="text"
            android:textStyle="italic"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="38sp" />

        <EditText
            android:id="@+id/ed1_fullName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="20dp"
            android:hint="fullName"
            android:inputType="text"
            android:background="#F8F1F1"
            android:padding="8dp"
            android:textSize="20sp"
            android:drawableLeft="@drawable/ic_baseline_person_24"
            android:drawablePadding="20dp"/>

        <EditText
            android:id="@+id/ed1_age"
            android:background="#F8F1F1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="28dp"
            android:layout_marginRight="20dp"
            android:hint="age"
            android:inputType="textEmailAddress"
            android:padding="8dp"
            android:textSize="20sp"
            android:drawableLeft="@drawable/ic_baseline_elderly_24"
            android:drawablePadding="20dp"/>

        <EditText
            android:id="@+id/ed1_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="28dp"
            android:layout_marginRight="20dp"
            android:hint="email"
            android:padding="8dp"
            android:background="#F8F1F1"
            android:textSize="20sp"
            android:drawableLeft="@drawable/ic_baseline_email_24"
            android:drawablePadding="20dp"/>


        <EditText
            android:id="@+id/ed1_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="28dp"
            android:layout_marginRight="20dp"
            android:hint="password"
            android:inputType="textPassword"
            android:padding="8dp"
            android:textSize="20sp"
            android:background="#F8F1F1"
            android:drawableLeft="@drawable/ic_baseline_info_24"
            android:drawablePadding="20dp"
            />

        <Button
            android:id="@+id/register"
            android:layout_width="115dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="40dp"
            android:backgroundTint="#3C3B3B"
            android:text="SIGn UP"
            android:textSize="18sp" />
    </LinearLayout>
.</ScrollView>